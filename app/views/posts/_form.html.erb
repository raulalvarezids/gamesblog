<%= form_with model: @post do |form| %>

<div>
    <%= form.label :title%>
    <%= form.text_field :title%>
    <% @post.errors.full_messages_for(:title).each do |message| %>    
        <span>
            <%= message%>
        </span>
    <% end %>
</div>

<div>
    <%= form.label :body%>
    <%= form.text_area :body%>
     <% @post.errors.full_messages_for(:body).each do |message| %>    
        <span>
            <%= message%>
        </span>
    <% end %>
</div>

<div>
    <%= form.label :photo%>
    <%= form.file_field :photo%>  
    <% @post.errors.full_messages_for(:photo).each do |message| %>    
        <span>
            <%= message%>
        </span>
    <% end %>
</div>

<div>
      <%= form.submit  %>
</div>

    
<% end %>