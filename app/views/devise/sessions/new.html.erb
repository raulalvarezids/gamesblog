
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='w-screen h-screen flex flex-col items-center justify-center mt-[-100px]'> 

    <div class='border-[1px] border-inputsbd mt-7 w-9/12  p-3  flex flex-col gap-6 md:w-1/2 lg:w-1/3 lg:border-2'>
    
    <h1 class='text-2xl text-center  text-main-text'>Log in</h1>  


  <div class='text-red-600 text-center'>
     <p class="alert"><%= alert %></p>     
  </div>
 
    <div class='flex flex-col gap-5 justify-center items-center text-main-text'>
      <div class="field ">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:'border-inputsbd focus:border-inputsbd rounded text-main-text' %>      
      </div>

      <div class="field text-main-text ">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:'border-inputsbd focus:border-inputsbd rounded text-main-text' %>
      </div>
    
    </div>

    <div class='flex flex-col gap-4 items-center text-main-text'>
      <% if devise_mapping.rememberable? %>
      <div class="field ">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions text-center ">
      <%= f.submit "Log in",  class:'cursor-pointer border-2 border-inputsbd p-2 px-5 rounded text-main-text' %>
    </div>

    </div>
  

      <div class='flex flex-col items-center text-main-text'>
        <%= render "devise/shared/links" %>
      </div>
      

    </div>


  </div>

  
  <% end %>


